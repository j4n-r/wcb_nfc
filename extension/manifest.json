{
  "manifest_version": 3,
  "name": "NFC Tag Manager",
  "version": "1.0",
  "description": "Manage NFC tags through a Flask API",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
    }
  },
  "permissions": [
    "tabs",
    "storage"
  ],
  "host_permissions": [
    "http://localhost:5000/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "icons": {
  }
}
